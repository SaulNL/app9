<!-- res/layout/activity_cilindro.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTituloCilindro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Cilindro"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editTextRadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTituloCilindro"
        android:layout_marginTop="16dp"
        android:hint="Radio"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/editTextAltura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextRadio"
        android:layout_marginTop="8dp"
        android:hint="Altura"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/btnCalcularCilindro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextAltura"
        android:layout_marginTop="16dp"
        android:text="Calcular"/>

    <Button
        android:id="@+id/btnLimpiarCilindro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCalcularCilindro"
        android:layout_marginTop="8dp"
        android:text="Limpiar"/>

    <Button
        android:id="@+id/btnRegresarCilindro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLimpiarCilindro"
        android:layout_marginTop="8dp"
        android:text="Regresar"/>

    <TextView
        android:id="@+id/textViewResultadoCilindro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnRegresarCilindro"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"/>
</RelativeLayout>
